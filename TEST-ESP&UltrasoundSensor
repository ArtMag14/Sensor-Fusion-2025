// Ultrasound Sensor Test with ESP32-WROOM-32
// HC-SR04 Sensor Example

// Pin definitions
const int trigPin = 4;   // GPIO4 - Trigger pin (output)
const int echoPin = 5;   // GPIO5 - Echo pin (input)

// Variables for distance calculation
long duration;
float distance;
float distanceInches;

void setup() {
  // Initialize serial communication
  Serial.begin(115200);
  
  // Initialize pins
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  
  Serial.println("Ultrasound Sensor Test - ESP32");
  Serial.println("===============================");
  delay(1000);
}

void loop() {
  // Clear the trigPin
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  
  // Set trigPin HIGH for 10 microseconds to send pulse
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
  
  // Read the echoPin, returns the sound wave travel time in microseconds
  duration = pulseIn(echoPin, HIGH);
  
  // Calculate distance (in cm)
  // Speed of sound = 343 m/s = 0.0343 cm/microsecond
  // Distance = (time × speed of sound) / 2 (round trip)
  distance = duration * 0.0343 / 2;
  
  // Calculate distance in inches
  distanceInches = duration * 0.0133 / 2;
  
  // Display results
  Serial.print("Distance: ");
  Serial.print(distance);
  Serial.print(" cm | ");
  Serial.print(distanceInches);
  Serial.println(" inches");
  
  // Add some conditions for testing
  if (distance < 10) {
    Serial.println("⚠️  Object very close!");
  } else if (distance < 50) {
    Serial.println("📍 Object detected nearby");
  } else if (distance > 400) {
    Serial.println("🔭 No object detected (out of range)");
  }
  
  Serial.println("-------------------");
  
  // Wait before next reading
  delay(1000);
}
